<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_option_heading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerInParent="true"
        android:background="@color/theme_color"
        android:gravity="center"
        android:text="Choose option"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/chat_option_image"
        android:layout_width="match_parent"
        android:background="@drawable/chat_item_selector"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/ic_picture"
            android:gravity="right|center_vertical" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="Image"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_option_video"
        android:layout_width="match_parent"
        android:background="@drawable/chat_item_selector"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/ic_video"
            android:gravity="right|center_vertical" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="Video"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>


</LinearLayout>