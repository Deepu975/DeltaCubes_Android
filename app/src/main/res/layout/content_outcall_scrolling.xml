<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        View
        android:layout_width="match_parent"
        android:layout_height="16dp"

        android:background="@color/col_light" />

        <!-- android:background="?attr/selectableItemBackground"-->
        <RelativeLayout
            android:id="@+id/aclr0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"

            android:padding="@dimen/activity_horizontal_margin">


            <TextView

                android:id="@+id/acltxtv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="About and number"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/theme_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acltxtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acltxtv0"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Number"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                style="@style/myFontLight"
                android:id="@+id/acltxtv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acltxtv1"
                android:layout_marginTop="4dp"

                android:ellipsize="end"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_50"
                android:textSize="10dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"

            android:background="@color/col_light" />

        <!-- android:background="?attr/selectableItemBackground"-->
        <RelativeLayout
            android:id="@+id/aclrl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:clickable="true"

            android:padding="@dimen/activity_horizontal_margin">

            <ImageView

                android:id="@+id/aclimgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:focusableInTouchMode="true"
                android:tintMode="@color/theme_color"
                android:src="@drawable/ic_call" />

            <TextView
                android:id="@+id/acltxtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/aclimgv"
                android:layout_toRightOf="@+id/aclimgv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Audio Call"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"

            android:background="@color/col_light" />

        <RelativeLayout
            android:id="@+id/vclrl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:clickable="true"

            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/vclimgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_video" />

            <TextView

                android:id="@+id/vcltxtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/vclimgv"
                android:layout_toRightOf="@+id/vclimgv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Video Call"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"

            android:background="@color/col_light" />

        <RelativeLayout
            android:id="@+id/chrl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView

                android:id="@+id/chimgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_chat" />

            <TextView
                android:id="@+id/chtxtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/chimgv"
                android:layout_toRightOf="@+id/chimgv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chat"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chrl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone">

            <ImageView
                android:id="@+id/chimgv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:focusableInTouchMode="true"
                android:src="@drawable/audiocall"
                android:visibility="gone" />

            <TextView
                android:id="@+id/chtxtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="File Upload"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chrl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"

            android:visibility="gone">

            <ImageView
                android:id="@+id/chimgv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:focusableInTouchMode="true"
                android:src="@drawable/videocall"
                android:visibility="gone" />

            <TextView
                android:id="@+id/chtxtv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="File Download"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
