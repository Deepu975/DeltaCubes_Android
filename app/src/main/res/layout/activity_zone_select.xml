<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <EditText
        android:textCursorDrawable="@null"
        android:textColorHint="@color/black_50"
        android:padding="@dimen/_5sdp"
        android:maxLines="1"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/search_country"
        android:textColor="@color/black"
        android:hint="@string/txt_search_country"
        android:drawableLeft="@drawable/ic_mysearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp" />

    <ListView
        android:layout_below="@+id/search_country"
        android:id="@+id/listViewZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/white"
        android:listSelector="@drawable/list_selector_light"
        android:dividerHeight="0.1dp" >
    </ListView>


    <TextView
        android:textColor="@color/black"
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Match Found"
        android:textSize="@dimen/_13sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>